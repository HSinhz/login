<div class="mt-4">
    <h3>Đăng khóa học</h3>
    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" name="name" class="form-control" id="name" placeholder="Mô tả">
        </div>
        <div class="form-group">
            <label for="desc">Mô tả khóa học</label>
            <input type="text" name="desc" class="form-control" id="desc" placeholder="Mô tả">
        </div>
        <div class="form-group">
            <label for="video">Video</label>
            <input type="text" name="video" class="form-control" id="video" placeholder="Mô tả">
        </div>
        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" name="level" class="form-control" id="level" placeholder="Mô tả">
        </div>

        
        <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>
</div>